<Ui>

    <Frame name="TotemPowerBaseTooltipFrame" mixin="TBDBaseTooltipMixin" virtual="true">
        <Scripts>
            <OnEnter method="OnEnter"/>
            <OnLeave>
                GameTooltip_SetDefaultAnchor(GameTooltip, UIParent)
            </OnLeave>
        </Scripts>
    </Frame>

    <Button name="TotemPowerSecureButton" mixin="TotemPowerSecureButtonMixin" inherits="SecureActionButtonTemplate" virtual="true">
        <Size x="36" y="36"/>
        <Layers>
            <Layer level="ARTWORK">
                <Texture parentKey="Icon">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="2" y="-2"/>
                        <Anchor point="BOTTOMRIGHT" x="-2" y="2"/>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad method="OnLoad"/>
        </Scripts>
    </Button>

    <Button name="TotemPowerTotemSelectorButton" mixin="TotemPowerTotemSelectorButtonMixin" virtual="true">
        <Size x="30" y="30"/>
        <Scripts>
            <OnLoad method="OnLoad"/>
            <OnClick method="OnClick"/>
        </Scripts>
    </Button>

    <Frame name="TotemPowerCharacterTemplate" mixin="TotemPowerCharacterMixin" enableMouse="true" virtual="true">
        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="Name" inherits="GameFontNormal" justifyH="Left">
                    <Size x="120" y="40"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" x="1" y="-1"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <Frames>
            <Button parentKey="Earth" inherits="TotemPowerTotemSelectorButton">
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.Name" relativePoint="RIGHT" x="10" y="0"/>
                </Anchors>
                <KeyValues>
                    <KeyValue key="Element" value="Earth" type="string"/>
                </KeyValues>
            </Button>
            <Button parentKey="Fire" inherits="TotemPowerTotemSelectorButton">
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.Earth" relativePoint="RIGHT" x="10" y="0"/>
                </Anchors>
                <KeyValues>
                    <KeyValue key="Element" value="Fire" type="string"/>
                </KeyValues>
            </Button>
            <Button parentKey="Water" inherits="TotemPowerTotemSelectorButton">
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.Fire" relativePoint="RIGHT" x="10" y="0"/>
                </Anchors>
                <KeyValues>
                    <KeyValue key="Element" value="Water" type="string"/>
                </KeyValues>
            </Button>
            <Button parentKey="Air" inherits="TotemPowerTotemSelectorButton">
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.Water" relativePoint="RIGHT" x="10" y="0"/>
                </Anchors>
                <KeyValues>
                    <KeyValue key="Element" value="Air" type="string"/>
                </KeyValues>
            </Button>
        </Frames>


    </Frame>


</Ui>