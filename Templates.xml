<Ui>

    <Frame name="TotemPowerBaseTooltipFrame" mixin="TBDBaseTooltipMixin" enableMouse="true" virtual="true">
        <Scripts>
            <OnEnter method="OnEnter"/>
            <OnLeave>
                GameTooltip_SetDefaultAnchor(GameTooltip, UIParent)
            </OnLeave>
        </Scripts>
    </Frame>

    <Button name="TotemPowerSecureButton" mixin="TotemPowerSecureButtonMixin" inherits="SecureActionButtonTemplate" virtual="true">
        <Size x="36" y="36"/>
        <Layers>
            <Layer level="ARTWORK">
                <Texture parentKey="Icon">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="2" y="-2"/>
                        <Anchor point="BOTTOMRIGHT" x="-2" y="2"/>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad method="OnLoad"/>
        </Scripts>
    </Button>

    <Button name="TotemPowerTotemSetButtonTemplate" mixin="TotemPowerTotemSetButtonMixin" virtual="true">
        <Size x="36" y="36"/>
        <Scripts>
            <OnLoad method="OnLoad"/>
            <OnClick method="OnClick"/>
        </Scripts>
    </Button>

    <Frame name="TotemPowerTotemSetTemplate" mixin="TotemPowerTotemSetMixin" virtual="true">
        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="Name" inherits="GameFontNormal" justifyH="Left">
                    <Size x="160" y="18"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" x="4" y="-4"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button parentKey="Air" inherits="TotemPowerTotemSetButtonTemplate">
                <Anchors>
                    <Anchor point="RIGHT" x="-4" y="0"/>
                </Anchors>
                <KeyValues>
                    <KeyValue key="Element" value="Air" type="string"/>
                </KeyValues>
            </Button>
            <Button parentKey="Water" inherits="TotemPowerTotemSetButtonTemplate">
                <Anchors>
                    <Anchor point="RIGHT" relativeKey="$parent.Air" relativePoint="LEFT" x="-10" y="0"/>
                </Anchors>
                <KeyValues>
                    <KeyValue key="Element" value="Water" type="string"/>
                </KeyValues>
            </Button>
            <Button parentKey="Fire" inherits="TotemPowerTotemSetButtonTemplate">
                <Anchors>
                    <Anchor point="RIGHT" relativeKey="$parent.Water" relativePoint="LEFT" x="-10" y="0"/>
                </Anchors>
                <KeyValues>
                    <KeyValue key="Element" value="Fire" type="string"/>
                </KeyValues>
            </Button>
            <Button parentKey="Earth" inherits="TotemPowerTotemSetButtonTemplate">
                <Anchors>
                    <Anchor point="RIGHT" relativeKey="$parent.Fire" relativePoint="LEFT" x="-10" y="0"/>
                </Anchors>
                <KeyValues>
                    <KeyValue key="Element" value="Earth" type="string"/>
                </KeyValues>
            </Button>
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad"/>
        </Scripts>
    </Frame>

    <Button name="TotemPowerTotemAssignmentButtonTemplate" mixin="TotemPowerTotemAssignmentButtonMixin" virtual="true">
        <Size x="36" y="36"/>
        <Scripts>
            <OnLoad method="OnLoad"/>
            <OnClick method="OnClick"/>
        </Scripts>
    </Button>

    <Frame name="TotemPowerCharacterTemplate" mixin="TotemPowerCharacterMixin" enableMouse="true" virtual="true">
        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="Name" inherits="GameFontNormal" justifyH="Left">
                    <Size x="160" y="18"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" x="4" y="-4"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <Frames>
            <Button parentKey="Air" inherits="TotemPowerTotemAssignmentButtonTemplate">
                <Anchors>
                    <Anchor point="RIGHT" x="-4" y="0"/>
                </Anchors>
                <KeyValues>
                    <KeyValue key="Element" value="Air" type="string"/>
                </KeyValues>
            </Button>
            <Button parentKey="Water" inherits="TotemPowerTotemAssignmentButtonTemplate">
                <Anchors>
                    <Anchor point="RIGHT" relativeKey="$parent.Air" relativePoint="LEFT" x="-10" y="0"/>
                </Anchors>
                <KeyValues>
                    <KeyValue key="Element" value="Water" type="string"/>
                </KeyValues>
            </Button>
            <Button parentKey="Fire" inherits="TotemPowerTotemAssignmentButtonTemplate">
                <Anchors>
                    <Anchor point="RIGHT" relativeKey="$parent.Water" relativePoint="LEFT" x="-10" y="0"/>
                </Anchors>
                <KeyValues>
                    <KeyValue key="Element" value="Fire" type="string"/>
                </KeyValues>
            </Button>
            <Button parentKey="Earth" inherits="TotemPowerTotemAssignmentButtonTemplate">
                <Anchors>
                    <Anchor point="RIGHT" relativeKey="$parent.Fire" relativePoint="LEFT" x="-10" y="0"/>
                </Anchors>
                <KeyValues>
                    <KeyValue key="Element" value="Earth" type="string"/>
                </KeyValues>
            </Button>
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad"/>
        </Scripts>

    </Frame>


</Ui>